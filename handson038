package main

import (
	"fmt"
	"math/rand"
)

func main() {
	c := 1
	//statement statement idiom, run 100 times
	for i := 1; i <= 100; i++ {
		if x := rand.Intn(5); x == 3 {
			fmt.Printf("%v. x is 3: value of x = %v\nCount of 3s: %v\n", i, x, c)
			c++
		} else {
			fmt.Printf("%v. x is not 3: value of x = %v\n", i, x)
		}
	}

}
